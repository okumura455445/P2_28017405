<!DOCTYPE html>
<html lang="es">
  <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Formulario de Contacto</title>
      <meta property="og:title" content="Formulario de Contacto" />
      <meta property="og:description" content="Complete the contact form to get in touch." />
      <meta property="og:image" content="URL to an image that represents your content" />
      <meta property="og:url" content="http://yourwebsite.com/contacto" />

      <link rel="stylesheet" href="stylesheets/style.css">

      <!-- Google Analytics -->
      <script async src="https://www.googletagmanager.com/gtag/js?id=G-YTPNSPFX7C"></script>
      <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'G-YTPNSPFX7C');
      </script>

      <!-- Google reCAPTCHA -->
      <script src="https://www.google.com/recaptcha/api/siteverify" async defer></script>

      <!-- Google Maps API -->
      <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA7TpVcCeS8bbFdNYm68vFWoZiNVtxPJq4"></script>
  </head>
    <body>
        <div class="container">
          <h1>Formulario de Contacto</h1>
            <form id="contactForm" action="/contact" method="POST">
              <label for="email">Correo Electrónico:</label>
              <input type="email" id="email" name="email" required>

              <label for="name">Nombre:</label>
              <input type="text" id="name" name="name" required>

              <label for="comment">Comentario:</label>
              <textarea id="comment" name="comment" required></textarea>

              <!-- reCAPTCHA Widget -->
              <div class="g-recaptcha" data-sitekey="6LecCLsqAAAAAEHgghmpbFJ_xru1CMiN4_rH7rQf"></div>
              
              <button type="submit">Enviar</button>
              <!-- Google Sign-In Button -->
              <a href="/auth/google" class="google-signin-button">Iniciar sesión con Google</a>
            </form>

          <!-- Map Section -->
          <div id="map" style="height: 400px; width: 100%;"></div>
        </div>

      <script>
        function initMap() {
          const location = { lat: -34.397, lng: 150.644 }; // Fictitious address
          const map = new google.maps.Map(document.getElementById("map"), {
            zoom: 8,
            center: location,
          });
          const marker = new google.maps.Marker({
            position: location,
            map: map,
          });
        }

        // Initialize the map
        window.onload = initMap;
      </script>
  </body>
</html>
